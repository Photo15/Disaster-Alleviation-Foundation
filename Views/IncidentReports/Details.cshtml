@model IncidentReport

@{
    ViewData["Title"] = "Incident Details";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">@Model.Title</h4>
                <div>
                    <span class="badge @(Model.Status == "Open" ? "bg-warning" : "bg-success") me-2">@Model.Status</span>
                    <span class="badge @(Model.Priority == "High" ? "bg-danger" : Model.Priority == "Medium" ? "bg-warning" : "bg-secondary")">@Model.Priority Priority</span>
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">@Model.Description</p>
                
                <div class="row mt-4">
                    <div class="col-md-6">
                        <h6><i class="bi bi-geo-alt me-1"></i>Location</h6>
                        <p>@Model.Location</p>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="bi bi-calendar me-1"></i>Date Reported</h6>
                        <p>@Model.DateReported.ToString("MMMM dd, yyyy 'at' HH:mm")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Actions</h6>
            </div>
            <div class="card-body">
                @if (User.IsInRole("Admin"))
                {
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil me-1"></i>Edit Report
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash me-1"></i>Delete Report
                        </a>
                    </div>
                    <hr />
                }
                <div class="d-grid">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>