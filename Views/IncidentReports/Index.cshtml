@model IEnumerable<IncidentReport>

@{
    ViewData["Title"] = "Incident Reports";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-exclamation-triangle me-2"></i>@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-danger">
        <i class="bi bi-plus-circle me-1"></i>Report New Incident
    </a>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-clipboard-check text-muted" style="font-size: 4rem;"></i>
        <h4 class="text-muted mt-3">No incidents reported</h4>
        <p class="text-muted">When incidents are reported, they will appear here.</p>
        <a asp-action="Create" class="btn btn-danger">Report First Incident</a>
    </div>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 @(item.Priority == "High" ? "priority-high" : item.Priority == "Medium" ? "priority-medium" : "priority-low")">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title">@item.Title</h5>
                            <span class="badge @(item.Status == "Open" ? "bg-warning" : "bg-success")">@item.Status</span>
                        </div>
                        <p class="card-text">@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</p>
                        <p class="card-text">
                            <small class="text-muted">
                                <i class="bi bi-geo-alt me-1"></i>@item.Location<br>
                                <i class="bi bi-calendar me-1"></i>@item.DateReported.ToString("MMM dd, yyyy HH:mm")
                            </small>
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge @(item.Priority == "High" ? "bg-danger" : item.Priority == "Medium" ? "bg-warning" : "bg-secondary")">
                                @item.Priority Priority
                            </span>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}