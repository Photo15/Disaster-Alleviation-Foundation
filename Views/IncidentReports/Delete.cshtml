@model DisasterAlleviationFoundation.Models.IncidentReport

@{
    ViewData["Title"] = "Delete Incident Report";
}

<h2 class="text-danger mb-4">
    <i class="bi bi-trash me-2"></i>Delete Incident Report
</h2>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle me-2"></i>
    <strong>Warning:</strong> Are you sure you want to delete this incident report? This action cannot be undone.
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>@Html.DisplayFor(model => model.Title)
                </h5>
            </div>
            <div class="card-body">
                <h6 class="text-muted">Incident Details</h6>
                <p><strong>Location:</strong> @Html.DisplayFor(model => model.Location)</p>
                <p><strong>Reported:</strong> @Html.DisplayFor(model => model.DateReported)</p>
                <p><strong>Priority:</strong> 
                    @if (Model.Priority == "Critical")
                    {
                        <span class="badge bg-danger">@Model.Priority</span>
                    }
                    else if (Model.Priority == "High")
                    {
                        <span class="badge bg-warning">@Model.Priority</span>
                    }
                    else if (Model.Priority == "Medium")
                    {
                        <span class="badge bg-info">@Model.Priority</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@Model.Priority</span>
                    }
                </p>
                <p><strong>Status:</strong> 
                    @if (Model.Status == "Resolved")
                    {
                        <span class="badge bg-success">@Model.Status</span>
                    }
                    else if (Model.Status == "Response In Progress")
                    {
                        <span class="badge bg-warning">@Model.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">@Model.Status</span>
                    }
                </p>
                
                <hr>
                <h6 class="text-muted">Description</h6>
                <p>@Html.DisplayFor(model => model.Description)</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h6 class="mb-0">Confirm Deletion</h6>
            </div>
            <div class="card-body">
                <p class="text-danger">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    This will permanently remove this incident report from the system.
                </p>
                
                @if (Model.Status == "Response In Progress")
                {
                    <div class="alert alert-warning small">
                        <strong>Warning:</strong> This incident is under active response.
                    </div>
                }
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete Report
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>