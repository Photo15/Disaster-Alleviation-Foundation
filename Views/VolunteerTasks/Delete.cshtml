@model DisasterAlleviationFoundation.Models.VolunteerTask

@{
    ViewData["Title"] = "Delete Volunteer Task";
}

<h2 class="text-danger mb-4">
    <i class="bi bi-trash me-2"></i>Delete Volunteer Task
</h2>

<div class="alert alert-warning">
    <i class="bi bi-exclamation-triangle me-2"></i>
    <strong>Warning:</strong> Are you sure you want to delete this volunteer task? This action cannot be undone.
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="bi bi-list-task me-2"></i>@Html.DisplayFor(model => model.Title)
                    @if (Model.Priority == "High")
                    {
                        <span class="badge bg-warning text-dark ms-2">High Priority</span>
                    }
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted">Task Information</h6>
                        <p><strong>Date & Time:</strong> @Html.DisplayFor(model => model.TaskDate)</p>
                        <p><strong>Estimated Hours:</strong> @Html.DisplayFor(model => model.EstimatedHours)</p>
                        @if (!string.IsNullOrEmpty(Model.Location))
                        {
                            <p><strong>Location:</strong> @Html.DisplayFor(model => model.Location)</p>
                        }
                        <p><strong>Priority:</strong> 
                            @if (Model.Priority == "High")
                            {
                                <span class="text-danger">@Model.Priority</span>
                            }
                            else if (Model.Priority == "Medium")
                            {
                                <span class="text-warning">@Model.Priority</span>
                            }
                            else
                            {
                                <span class="text-muted">@Model.Priority</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-muted">Status & Assignment</h6>
                        <p><strong>Status:</strong> 
                            @if (Model.Status == "Completed")
                            {
                                <span class="badge bg-success">@Model.Status</span>
                            }
                            else if (Model.Status == "Assigned")
                            {
                                <span class="badge bg-warning">@Model.Status</span>
                            }
                            else if (Model.Status == "Open")
                            {
                                <span class="badge bg-info">@Model.Status</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Model.Status</span>
                            }
                        </p>
                        <p><strong>Created:</strong> @Html.DisplayFor(model => model.CreatedDate)</p>
                        @if (!string.IsNullOrEmpty(Model.AssignedVolunteerId))
                        {
                            <p><strong>Assigned Volunteer:</strong> @Model.AssignedVolunteerId</p>
                        }
                        @if (Model.CompletionDate.HasValue)
                        {
                            <p><strong>Completed:</strong> @Html.DisplayFor(model => model.CompletionDate)</p>
                        }
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <hr>
                    <h6 class="text-muted">Description</h6>
                    <p>@Html.DisplayFor(model => model.Description)</p>
                }
                
                @if (!string.IsNullOrEmpty(Model.RequiredSkills))
                {
                    <hr>
                    <h6 class="text-muted">Required Skills</h6>
                    <span class="badge bg-secondary">@Html.DisplayFor(model => model.RequiredSkills)</span>
                }
                
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <hr>
                    <h6 class="text-muted">Additional Notes</h6>
                    <p>@Html.DisplayFor(model => model.Notes)</p>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h6 class="mb-0">Confirm Deletion</h6>
            </div>
            <div class="card-body">
                <p class="text-danger">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    This will permanently remove this volunteer task from the system.
                </p>
                
                @if (Model.Status == "Assigned" && !string.IsNullOrEmpty(Model.AssignedVolunteerId))
                {
                    <div class="alert alert-warning small">
                        <strong>Warning:</strong> This task is currently assigned to a volunteer. Deleting it may cause confusion.
                    </div>
                }
                else if (Model.Status == "Completed")
                {
                    <div class="alert alert-info small">
                        <strong>Note:</strong> This task has been completed. Consider keeping it for record purposes.
                    </div>
                }
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete Task
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>