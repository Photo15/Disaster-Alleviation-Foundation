@model IEnumerable<DisasterAlleviationFoundation.Models.Donation>

@{
    ViewData["Title"] = "Donations";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary">
        <i class="bi bi-gift me-2"></i>Donations Management
    </h2>
    <div>
        @if (User.IsInRole("Donor") || User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success me-2">
                <i class="bi bi-plus-circle me-1"></i>New Donation
            </a>
        }
        @if (User.IsInRole("Donor"))
        {
            <a asp-action="MyDonations" class="btn btn-outline-primary">
                <i class="bi bi-person-check me-1"></i>My Donations
            </a>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-gift text-muted" style="font-size: 3rem;"></i>
        <h4 class="text-muted mt-3">No Donations Yet</h4>
        <p class="text-muted">No donations have been recorded in the system.</p>
        @if (User.IsInRole("Donor") || User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">Make First Donation</a>
        }
    </div>
}
else
{
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <i class="bi bi-gift" style="font-size: 2rem;"></i>
                    <h4 class="mt-2">@Model.Count()</h4>
                    <p class="mb-0">Total Donations</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle" style="font-size: 2rem;"></i>
                    <h4 class="mt-2">@Model.Count(d => d.Status == "Received")</h4>
                    <p class="mb-0">Received</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <i class="bi bi-truck" style="font-size: 2rem;"></i>
                    <h4 class="mt-2">@Model.Count(d => d.Status == "In Transit")</h4>
                    <p class="mb-0">In Transit</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DonorName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ResourceType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateDonated)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DeliveryAddress)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(d => d.DateDonated))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DonorName)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.ResourceType)</td>
                                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                <td>
                                    @if (item.Status == "Received")
                                    {
                                        <span class="badge bg-success">@item.Status</span>
                                    }
                                    else if (item.Status == "In Transit")
                                    {
                                        <span class="badge bg-warning">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">@item.Status</span>
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.DateDonated)</td>
                                <td>@Html.DisplayFor(modelItem => item.DeliveryAddress)</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}